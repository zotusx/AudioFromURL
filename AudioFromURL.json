    {
      "fullName": "Change the sound volume",
      "functionType": "Action",
      "name": "VolumeSound",
      "sentence": "Set the sound volume in _PARAM1_",
      "events": [
        {
          "type": "BuiltinCommonInstructions::JsCode",
          "inlineCode": [
            "const volumePercent = eventsFunctionContext.getArgument(\"Volume\");",
            "if (window._gdBackgroundMusic) {",
            "    const clampedVolume = Math.min(100, Math.max(0, volumePercent)) / 100;",
            "    window._gdBackgroundMusic.volume = clampedVolume;",
            "}"
          ],
