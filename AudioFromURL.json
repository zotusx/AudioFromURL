        {
          "description": "URL (to .mp3)",
          "name": "NewMusicURL",
          "type": "string"
        },
        {
          "description": "Write a delay (example: 1000 ms - 1 second)",
          "name": "DurationMs",
          "type": "expression"
        }
      ],
